<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="background">@color/color_primary</item>
        <item name="android:textColor">@color/color_text_primary</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:background">@color/color_primary</item>
        <item name="android:minHeight">?android:attr/actionBarSize</item>
        <item name="titleTextColor">@color/color_text_primary</item>
    </style>

    <style name="AppTheme.Toolbar.Elevation" parent="AppTheme.Toolbar">
        <item name="android:elevation">4dp</item>
    </style>

    <style name="AppTheme.Toolbar.NoElevation" parent="AppTheme.Toolbar">
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
    </style>

</resources>
